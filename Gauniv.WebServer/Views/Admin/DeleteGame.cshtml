@model Gauniv.WebServer.Data.Game
@{
    ViewData["Title"] = "Delete Game";
}

<div class="max-w-lg mx-auto mt-8 bg-gray-800 p-6 rounded shadow">
    <h2 class="text-2xl font-bold text-center mb-4">Delete Game</h2>
    <p class="text-center mb-4">Are you sure you want to delete the game <strong>@Model.Nom</strong>?</p>
    <form asp-action="DeleteGame" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="flex justify-center space-x-4">
            <button type="submit" class="px-4 py-2 bg-red-600 hover:bg-red-500 text-white rounded">
                Yes, Delete
            </button>
            <a href="/Admin/Index" class="px-4 py-2 bg-gray-600 hover:bg-gray-500 text-white rounded">
                Cancel
            </a>
        </div>
    </form>
</div>
