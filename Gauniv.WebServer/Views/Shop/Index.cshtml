@model IEnumerable<Gauniv.WebServer.Data.Game>
@{
    ViewData["Title"] = "Shop";
}

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold text-steamBlue mb-6">Shop</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        @foreach (var game in Model)
        {
            <div class="bg-gray-800 p-4 rounded hover:shadow-xl transition duration-300">
                <h3 class="text-lg font-bold">@game.Nom</h3>
                <p class="text-sm text-gray-400">
                    @(game.Description.Length > 80 ? game.Description.Substring(0, 80) + "..." : game.Description)
                </p>
                <p class="mt-2 text-green-500 font-semibold">$@game.Prix</p>
                <a href="/Shop/Buy/@game.Id" class="text-steamBlue hover:underline mt-2 block">Buy</a>
            </div>
        }
    </div>
</div>
