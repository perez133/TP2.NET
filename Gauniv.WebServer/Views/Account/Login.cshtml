@model Gauniv.WebServer.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="max-w-md mx-auto mt-8 bg-gray-800 p-6 rounded shadow">
    <h2 class="text-2xl font-bold text-center mb-4">Login</h2>
    <form asp-action="Login" method="post">
        <div class="mb-4">
            <label asp-for="UserName" class="block text-gray-300">Username</label>
            <input asp-for="UserName" class="w-full p-2 rounded bg-gray-700 border border-gray-600 text-white" />
            <span asp-validation-for="UserName" class="text-red-500 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Password" class="block text-gray-300">Password</label>
            <input asp-for="Password" class="w-full p-2 rounded bg-gray-700 border border-gray-600 text-white" />
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>
        <div class="mb-4 flex items-center">
            <input asp-for="RememberMe" type="checkbox" class="mr-2" />
            <label asp-for="RememberMe" class="text-gray-300">Remember me</label>
        </div>
        <div class="text-center">
            <button type="submit" class="px-4 py-2 bg-steamGreen hover:bg-steamGreenHover text-white rounded">
                Login
            </button>
        </div>
    </form>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
