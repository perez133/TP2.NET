@model Gauniv.WebServer.Data.Category
@{
    ViewData["Title"] = "Delete Category";
}

<div class="max-w-md mx-auto mt-8 bg-gray-800 p-6 rounded shadow">
    <h2 class="text-2xl font-bold text-center mb-4">Delete Category</h2>
    <p class="text-center mb-4">Are you sure you want to delete the category <strong>@Model.Nom</strong>?</p>
    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="flex justify-center space-x-4">
            <button type="submit" class="px-4 py-2 bg-red-600 hover:bg-red-500 text-white rounded">
                Yes, Delete
            </button>
            <a href="/AdminCategories" class="px-4 py-2 bg-gray-600 hover:bg-gray-500 text-white rounded">
                Cancel
            </a>
        </div>
    </form>
</div>
